!alias dojo-point embed
{{args=&ARGS&}}
{{c="Dojo Point"}}
{{create_cc_nx(c, 0)}}
{{mod_cc(c, int(args[0])) if len(args)>0 else None}}
-title "{{f'{name} has {cc_str(c)} point(s)' if len(args)==0 else f'{name} gains {args[0]} points!'}}"
-f "{{f'Dojo Points|{cc_str(c)}'}} {{'(+'+str(args[0])+')' if len(args)>0 else None}}"
-thumb <image> -color <color>